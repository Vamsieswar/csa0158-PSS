#include<stdio.h>
int main()
{
	int n,small,large,i,a[100];
	printf("enter the elements:");
	scanf("%d",&n);
	printf("array elements");
	for(i=0;i<n;++i)
	scanf("%d",&a[i]);
	large=small=a[0];
	for(i=1;i<n;++i)
	{
	 if(a[i]>large)
		large=a[i];
	 if(a[i]<small)
		small=a[i];
	}
	printf("\nlargest no:%d",large);
	printf("\nsmallest no:%d",small);
	return 0;	
}
